@model IEnumerable<ShopMVC8.Data.HangHoa>

@{
    ViewData["Title"] = "Danh mục";
    Layout = "_LayoutAdmin";
}
<!-- LeftNavbar-->
@section LeftNavbar
{
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="../../index3.html" class="nav-link">Home</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Danh mục</a>
      </li>
    </ul>
}

    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1> Quản lí  danh mục </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active"><a href="#"> Danh mục </a></li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>
            <div class="card-tools">
                <a asp-controller="AdminCategory" asp-action="Adding" class="btn btn-primary"> Thêm mới</a>
                <a asp-controller="AdminCategory" asp-action="Edit" class="btn btn-warning"> Sửa</a>
                <a asp-controller="AdminCategory" asp-action="Delete" class="btn btn-danger"> Xóa</a>
            </div>

        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thread>
                    <tr>
                        <th>Mã hàng hoá</th>
                        <th>Tên hàng hoá</th>
                        <th>Số hiệu sản phẩm </th>
                        <th> Mã loại </th>
                        <th> Mô tả đơn vị </th>
                        <th> Đơn giá </th>
                        <th> Hinh</th>
                        <th> Ngày sản xuất </th>
                        <th> Giảm giá </th>
                        <th> Mô tả </th>
                        <th> Mã ncc </th>
                    </tr>
                </thread>
                <tbody>
                 @if (Model!=null && Model.Any())
                        {
                          @foreach(var item in Model)
                          {
                           <tr>
                                <th>@item.MaHh </th>
                                <th>@item.TenHh </th>
                                <th>@item.TenAlias </th> 
                                <th>@item.MaLoai</th>
                                <th>@item.MoTaDonVi </th>
                                <th>@item.DonGia </th>
                                <th><img class="img-fluid w-100" src="~/Hinh/HangHoa/@item.Hinh"></th>                         
                               <th>@item.NgaySx </th>
                               <th>@item.GiamGia </th>
                               <th>@item.MoTa </th>
                               <th>@item.MaNcc </th>                                                                                                                                                                                                                     
                           </tr> 
                          }
                        }
                    else 
                        {
                            <tr>
                                <td colspan ="12"> Không có bản ghi nào </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
      <!-- /.card -->

    </section>